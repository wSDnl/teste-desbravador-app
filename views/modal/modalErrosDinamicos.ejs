<%- include('../partials/sis_herad.ejs')%>
<link href="/assets/css/backgroundAvisos.css" rel="stylesheet" />


<div class="sweet-alert showSweetAlert visible" data-custom-class="" data-has-cancel-button="true" data-has-confirm-button="true" data-allow-outside-click="false" data-has-done-function="false" data-animation="pop" data-timer="null" style="display: block; margin-top: -145px;">
    <div class="sa-icon sa-error" style="display: none;">
    <span class="sa-x-mark">
        <span class="sa-line sa-left"></span>
        <span class="sa-line sa-right"></span>
    </span>
</div><div class="sa-icon sa-warning pulseWarning" style="display: block;">
    <span class="sa-body pulseWarningIns"></span>
    <span class="sa-dot pulseWarningIns"></span>
</div><div class="sa-icon sa-info" style="display: none;"></div><div class="sa-icon sa-success" style="display: none;">
<span class="sa-line sa-tip"></span>
<span class="sa-line sa-long"></span>
<div class="sa-placeholder"></div>
<div class="sa-fix"></div>
</div><div class="sa-icon sa-custom" style="display: none;"></div><h2>Erro</h2>
<p style="display: block;">Verique o(s) erro(s) para continuar</p>
<p style="display: block;"><div id="avisos"></div></p>
<textarea name="respJSON" id="respJSON" style="width: 0px; height: 0px; visibility: hidden;"><%= erro %></textarea>
<!-- <textarea name="respJSON" id="respJSON" ><%= erro %></textarea> -->
<fieldset>
    <input type="text" tabindex="3" placeholder="">
<div class="sa-input-error"></div>
</fieldset><div class="sa-error-container">
<div class="icon">!</div>
<p>Not valid!</p>
</div><div class="sa-button-container">
    <div class="sa-confirm-button-container">
        <button onclick="javascript:history.back()" class="confirm" tabindex="1" style="display: inline-block; background-color: rgb(255, 112, 67); box-shadow: rgba(255, 112, 67, 0.8) 0px 0px 2px, rgba(0, 0, 0, 0.05) 0px 0px 0px 1px inset;">OK</button><div class="la-ball-fall">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
</div></div>

<script>
    function carregaAvisos() {
        let response = JSON.parse( $('#respJSON').val())
        $('#avisos').empty()        
        $(response).each(function (i,e) {
            $('#avisos').append("<div class='alert alert-danger alert-styled-left alert-bordered'>"+ e +"</div>")
        })            
    }
    carregaAvisos()
</script>