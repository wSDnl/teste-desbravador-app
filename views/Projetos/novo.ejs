<%- include('../partials/sis_main_1.ejs')%>

    <div class="page-header2 page-header2-default">
        <div class="page-header2-content">
            <div class="page-title">
                <h4>Novo Projeto </h4>
            </div>
        </div>
    </div>

    <form method="POST" class="form-horizontal" action="/projeto/novo">

    <div class="form-group">
        <label><span class="status-mark bg-danger"></span> Nome </label>
        <input name="nome" id="nome" type="text" class="form-control" style="text-transform:capitalize" required>
    </div>
    
    <div class="form-group">
        <label><span class="status-mark bg-danger"></span> Data Inicio: </label>
        <input name="data_inicio" id="data_inicio" type="date" class="form-control" style="text-transform:capitalize" required>
    </div>

    <div class="form-group">
        <label><span class="status-mark bg-danger"></span> Previsão de término: </label>
        <input name="previsao_termino" id="previsao_termino" type="date" class="form-control" style="text-transform:capitalize" required>
    </div>

    <div class="form-group">
        <label> Data Real Término: </label>
        <input name="data_real_termino" id="data_real_termino" type="date" class="form-control" style="text-transform:capitalize">
    </div>
    
    <div class="form-group">
        <label><span class="status-mark bg-danger"></span> Orçamento Total</label>
        <input type="text" name="orcamento_total" id="orcamento_total" class="form-control" onkeydown="FormataMoeda(this,10,event)" onkeypress="return maskKeyPress(event)" required>
    </div>

    <div class="form-group">
        <label><span class="status-mark bg-danger"></span> Descrição </label>
        <input name="descricao" id="descricao" type="text" class="form-control" required>
    </div>

    <div class="form-group">
        <label><span class="status-mark bg-danger"></span> Gerente:</label>
        <select name="gerente_responsavel" id="gerente_responsavel" class="select">
            <option value="" selected>Selecione</option>
            <% if(response.length > 0){ for (let i=0; i < response.length; i++) { %>                        
                <option value="<%= response[i].id %>"><%= response[i].nome %></option>
            <% }} %>
        </select>
    </div>

    <div class="text-right">
        <input type="submit"  value="CADASTRA NOVO PROJETO" class="btn btn-primary"> 
    </div>
            
</form>


